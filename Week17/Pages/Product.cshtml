@page "{NameOrType}"
@model ProductModel

@{
}

         
        @* Loop through each of the  products and display the relevant products *@

        @foreach (var product in Model.Products)
        {
        @* get route data*@           
        @* if relevant product type *@
           @if (product.ProductType.Contains(@Model.NameOrType) ||  product.Name.Contains(@Model.NameOrType))
           {
          <div class="itemcolumn">           

            @* display product *@                          
                        
                <h3>@product.Name</h3>
                                
                <a asp-page="/ProductInformation"  asp-route-Id=@product.Id> <img class="itemimage" src="@product.ProductImage" alt="Image of @product.Name" /> </a>
                
                <div class="iteminformation">
                    <p class="price">£@product.Price <a asp-page="/Basket" asp-route-ProductId=@product.Id  asp-page-handler="AddToBasket"> <img src="~/assets/carticon.jpg" class="cartlink"> </a>  
                        </p>
                </div>
          </div>
          }
       
        }
  