@page
@model Week17.Pages.ManageUserModel
@{
}

<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#home">Home</a></li>
  <li><a data-toggle="tab" href="#roles">Roles</a></li>
  <li><a data-toggle="tab" href="#users">Users</a></li>
  <li><a data-toggle="tab" href="#addrole">Add role</a></li>
</ul>

<div class="tab-content">
  <div id="roles" class="tab-pane fade in active">
       
    <table class="table table-striped">

        <thread>
           <tr>
               <th> Id </th>
               <th> Roles </th>
          </tr>

        </thread>

        <tbody>
            @foreach (var role in Model.roles)
            {
              <tr> 
                <td> @role.Id </td>
                <td> @role.Name </td>
                <td> <a class="btn btn-small btn-danger review-order-footer-buttons float-right" asp-page="/ManagerUser" asp-route-id="@role.Id" asp-page-handler="Delete"> Delete role </a> </td>
            </tr>
            }
        </tbody>

    </table>
  </div>

  <div id="users" class="tab-pane fade">
    
    <table class="table table-striped">

        <thread>
           <tr>
               <th> Id </th>
               <th> Roles </th>
          </tr>

        </thread>

        <tbody>

            @foreach (var user in Model.Users)
            {
              <tr>                     
                <td> @user.UserName </td>>
                <td> @user.FirstName </td>>
                <td> @user.LastName </td>>
                <td> @user.AddressLine1 </td>>
                <td> @user.AddressLine2 </td>>
                <td> @user.City</td>>
                <td> @user.Country </td>>
                <td> @user.Email </td>>
                <td> @user.PhoneNumber </td>
                
                <td> <a class="btn btn-small btn-danger review-order-footer-buttons float-right" asp-page="/ManagerUser" asp-route-id="@user.Id" asp-page-handler="DeleteUser"> Delete user </a> </td>
            </tr>
            }
        </tbody>

    </table>

  
  </div>
</div>
